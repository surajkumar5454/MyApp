<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- UID and Name -->
        <TextView
            android:id="@+id/uidName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UID, Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Unit -->
        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit: XYZ"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Rank -->
        <TextView
            android:id="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank: ABC"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Date of Joining and Relieving -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/dateOfJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Joining: 01/01/2020"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" | "
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/dateOfRelieve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Relieving: 01/01/2022"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
